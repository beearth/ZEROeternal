rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User profiles: Publicly readable
    // create/delete: 본인만 허용
    // update: 인증된 사용자 허용 (팔로우/언팔로우를 위해)
    match /users/{userId} {
      allow read: if true;
      allow create: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null;
      allow delete: if request.auth != null && request.auth.uid == userId;
    }

    // Posts: Publicly readable, Write if authenticated
    // update: 모든 인증된 사용자 허용 (댓글, 좋아요, 리포스트용)
    // delete: 작성자만 허용
    match /posts/{postId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null && request.auth.uid == resource.data.authorId;
    }
    
    // Chats: Only participants can read/write
    match /chats/{chatId} {
      // 읽기: 참여자만
      allow read: if request.auth != null && request.auth.uid in resource.data.participants;
      // 생성: 인증된 사용자 (본인이 참여자에 포함되어야 함)
      allow create: if request.auth != null && request.auth.uid in request.resource.data.participants;
      // 수정: 참여자만
      allow update: if request.auth != null && request.auth.uid in resource.data.participants;
      // 삭제: 참여자만
      allow delete: if request.auth != null && request.auth.uid in resource.data.participants;

      match /messages/{messageId} {
        allow read, write: if request.auth != null;
      }
    }

    // Global Messages: Anyone authenticated can read/write
    match /global_messages/{messageId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.sender_id;
    }

    // Notifications: Only recipient can read, anyone authenticated can create
    match /notifications/{notifId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.recipientId;
      allow create: if request.auth != null;
    }
  }
}
