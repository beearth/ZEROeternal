rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User profiles: Publicly readable for name/avatar/etc.
    // Write restricted to owner.
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Posts: Publicly readable, Write if authenticated
    // update: 모든 인증된 사용자 허용 (댓글, 좋아요, 리포스트용)
    // delete: 작성자만 허용
    match /posts/{postId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if request.auth != null && request.auth.uid == resource.data.authorId;
    }
    
    // Chats: Only participants can read/write
    match /chats/{chatId} {
      allow read, write: if request.auth != null && (
        request.auth.uid in resource.data.participants || 
        resource.data.participants == null // Allow creation
      );
      
      match /messages/{messageId} {
        allow read, write: if request.auth != null;
      }
    }

    // Global Messages: Anyone authenticated can read/write
    match /global_messages/{messageId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.sender_id;
    }

    // Notifications: Only recipient can read, anyone authenticated can create
    match /notifications/{notifId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.recipientId;
      allow create: if request.auth != null;
    }
  }
}
